			e.printStackTrace();
		}
		String line;
		String msg;
		while(true) {
			msg = br.readLine();
			String[] ar = msg.split(":");
			if(ar[0].equals("100")) {
				bw.write(ar[1]+"");
			}else if(ar[0].equals("200")) {
				
			}else if(ar[0].equals("300")) {
				
			}
				
			
		}
		
	}
	
}
