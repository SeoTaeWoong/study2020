package thread;

import java.awt.Button;
import java.awt.Frame;
import java.awt.Panel;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;
import java.util.Scanner;
import java.awt.GridLayout;

public class RunRace extends Frame implements ActionListener{
	private int count;
	private String[] name;
	private Button btn;
	private Panel p;
	private Panel p2;
	private Racer[] racer;
	public RunRace(int count, String[] name){
		this.count = count;
		this.name = name;
		
		
		
		setLayout(null);
		btn = new Button("출발");
		p.setBounds(450,470,40,20);
		p.add(btn);
		
		
		p2 = new Panel(new GridLayout(count,1,5,5));
		p2.setBounds(20,30,400,400);
		
		racer = new Racer[count];
		for(int i =0; i<count;i++){
			racer[i] = new Racer();
			p2.add(racer[i]);
		}
		
		
		add(p2);
		add(p);
		
		
		setBounds(900,300,500,500);
		setVisible(true);
		setResizable(false);
		
		addWindowListener(new WindowAdapter() {
			@Override
			public void windowClosing(WindowEvent e) {
				System.exit(0);
			}
		});
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		Thread[] t = new Thread[count];
		for(int i = 0; i<count; i++) {
			t = new Thread(racer[i]);
		}
	}
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("경주마 수 입력: ");
		int count = sc.nextInt();
		String[] name = new String[count];
		
		for(int i=0; i<count; i++){
			System.out.println("경주마 이름 입력: ");
			name[i] = sc.next(); 
		}
		sc.close();
		new RunRace(count,name);
	}

	
}
